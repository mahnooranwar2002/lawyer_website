@model laywer_web.Models.lawyerViewModel
@{
    Layout = "../shared/_layout2.cshtml";
}
@if (ViewBag.mycountriesadded != null)
{
    <div class="alert alert-success" role="alert">
        <h5 style="text-align: center;">@ViewBag.mycountriesadded</h5>
    </div>
}
<main>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col  flex-column align-items-center justify-content-center">


                        <!-- End Logo -->

                        <div class="card mb-3">


                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Add Countries</h5>

                                </div>

                                <form method="Post" class="row g-3 needs-validation">
                                    <div class="col-12">
                                        <label for="yourName" class="form-label">Country id</label>
                                        <input type="text" name="country_name" class="form-control" id="yourName" required
                                               value="@Model.editedcountries.country_id" readonly>
                                        <label for="yourName" class="form-label">Country Name</label>
                                        <input type="text" name="country_name" class="form-control" id="yourName" required 
                                        value="@Model.editedcountries.country_name">
                                   
                                    </div>

                                    <div class="col-12">
                                        <input class="btn btn-primary w-100" type="submit" value="Add country">
                                    </div>

                                </form>

                            </div>
                        </div>



                    </div>
                </div>
            </div>

        </section>

    </div>
</main>


@model laywer_web.Models.lawyerViewModel
@{
    Layout = "../shared/_layout2.cshtml";
}

<main>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Contact Data Table</h5>

            <!-- Dark Table -->
            <table class="table table-dark">
                <thead>
                    <tr>
                      
                        <th scope="col">User Name</th>
                        <th scope="col">user Email</th>
                        <th scope="col">user subject</th>
                      
                        <th scope="col">user massages</th>

                        <th scope="col"> Options</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var contact_data in Model.user_Contact)
                    {
                        <tr>
                            @*    <th scope="row"></th> *@
                         
                            <td>@contact_data.user_name</td>
                            <td>@contact_data.user_email</td>

                            <td>@contact_data.user_sub</td>
                            <td>@contact_data.user_msg</td>
                            <td>
                                <button class="btn btn-danger">
                                <a href ="@Url.Action("deletecontact", "admin", new { id = contact_data.user_id })" style="color:white;">
                               
                                        Delete
                                    
                                </a>
                                </button>
                            </td>



                            @* <td>@lawyer_data.lawyer_name</td>
                        <td>@lawyer_data.lawyer_email</td>
                        <td>@lawyer_data.lawyer_password</td> *@

@model laywer_web.Models.lawyerViewModel
@{
    Layout = "../shared/_layout2.cshtml";
}



<main>

    <div class="card">
        <div class="card-body">

            <h5 class="card-title">Countries Data Table</h5>
            <button class="btn btn-primary">
                <a href="@Url.Action("addCities","admin")" style="color:white;">Add Cities</a>
            </button>
            <!-- Dark Table -->
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">City  Name</th>

                        <th>Country Name</th>
                        <th scope="col"> Options</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var showCities in Model.showCities)
                    {
                        <tr>
                            @*    <th scope="row"></th> *@
                            <td>@showCities.city_id</td>.
                            <td>@showCities.city_name</td>
                            <td>@showCities.mycountries.country_name</td>

                            <td>
                                <button class="btn btn-danger">
                                    <a href="@Url.Action("deletecity", "admin")" style="color:white;">

                                        Delete

                                    </a>
                                </button>


                            </td>



                        </tr>
                    }




                </tbody>
            </table>
            <!-- End Dark Table -->

        </div>
    </div>
</main>